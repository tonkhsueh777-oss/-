    <script>
        /* --- JavaScript é‚è¼¯å€ --- */

        // 1. å•†å“è³‡æ–™åº« (æ¨¡æ“¬ä½ çš„åœ–ç‰‡å…§å®¹)
        // æ³¨æ„ï¼šåœ–ç‰‡ src è«‹æ›æˆä½ å¯¦éš›çš„åœ–ç‰‡é€£çµæˆ–ç›¸å°è·¯å¾‘
        const products = [
            { id: 1, name: "æ‹›è²¡è²“å¸†å¸ƒè¢‹", price: 390, img: "https://via.placeholder.com/300x200?text=Bag" },
            { id: 2, name: "åœ¨åœ°å°è¾²ç‰ç±³ (ä¸€ç®±)", price: 500, img: "https://via.placeholder.com/300x200?text=Corn" },
            { id: 3, name: "å¥½é‹ç¥ˆç¦æ‰‡", price: 150, img: "https://via.placeholder.com/300x200?text=Fan" },
            { id: 4, name: "è™å¹´é™å®šæŠ±æ•", price: 450, img: "https://via.placeholder.com/300x200?text=Pillow" },
            { id: 5, name: "æ–‡å‰µ T-shirt", price: 680, img: "https://via.placeholder.com/300x200?text=Tshirt" },
            { id: 6, name: "å¤§å‰å¤§åˆ©ç¦®ç›’", price: 880, img: "https://via.placeholder.com/300x200?text=GiftBox" }
        ];

        let cart = []; // è³¼ç‰©è»Šé™£åˆ—

        // 2. åˆå§‹åŒ–ç¶²é ï¼šæŠŠå•†å“é¡¯ç¤ºå‡ºä¾†
        const productListEl = document.getElementById('product-list');

        function renderProducts() {
            productListEl.innerHTML = products.map(p => `
                <div class="product-card">
                    <img src="${p.img}" alt="${p.name}" class="product-img">
                    <div class="product-info">
                        <div class="product-title">${p.name}</div>
                        <div class="product-price">NT$ ${p.price}</div>
                        <button class="add-btn" onclick="addToCart(${p.id})">åŠ å…¥è³¼ç‰©è»Š +</button>
                    </div>
                </div>
            `).join('');
        }

        // 3. åŠ å…¥è³¼ç‰©è»ŠåŠŸèƒ½
        function addToCart(id) {
            const product = products.find(p => p.id === id);
            cart.push(product);
            renderCart();
            alert(`å·²å°‡ã€Œ${product.name}ã€åŠ å…¥è³¼ç‰©è»Šï¼`);
            
            // è‡ªå‹•æ²å‹•åˆ°åº•éƒ¨ (é¸ç”¨)
            // document.getElementById('cart-section').scrollIntoView({behavior: 'smooth'});
        }

        // 4. æ¸²æŸ“è³¼ç‰©è»Šèˆ‡è¨ˆç®—ç¸½é‡‘é¡
        function renderCart() {
            const cartContainer = document.getElementById('cart-items-container');
            const totalEl = document.getElementById('grand-total');

            if (cart.length === 0) {
                cartContainer.innerHTML = '<p style="color: #999;">è³¼ç‰©è»Šç›®å‰æ˜¯ç©ºçš„</p>';
                totalEl.innerText = '0';
                return;
            }

            // é¡¯ç¤ºåˆ—è¡¨
            cartContainer.innerHTML = cart.map((item, index) => `
                <div class="cart-item">
                    <span>${item.name}</span>
                    <span>NT$ ${item.price} <button onclick="removeFromCart(${index})" style="background:#ccc;border:none;border-radius:50%;cursor:pointer;">x</button></span>
                </div>
            `).join('');

            // è¨ˆç®—ç¸½åƒ¹
            const total = cart.reduce((sum, item) => sum + item.price, 0);
            totalEl.innerText = total;
        }

        // ç§»é™¤è³¼ç‰©è»Šé …ç›®
        function removeFromCart(index) {
            cart.splice(index, 1);
            renderCart();
        }

        // 5. é€å‡ºè¨‚å–®è™•ç†
        function handleOrder(e) {
            e.preventDefault(); // é˜»æ­¢è¡¨å–®é è¨­è·³è½‰

            if (cart.length === 0) {
                alert('è³¼ç‰©è»Šæ˜¯ç©ºçš„ï¼Œç„¡æ³•é€å‡ºå–”ï¼');
                return;
            }

            const name = document.getElementById('customer-name').value;
            const phone = document.getElementById('customer-phone').value;
            const address = document.getElementById('customer-address').value;
            
            // æ•´ç†è¨‚å–®å…§å®¹å­—ä¸²
            let orderContent = "è¨‚è³¼æ˜ç´°ï¼š\n";
            let total = 0;
            cart.forEach(item => {
                orderContent += `- ${item.name} (NT$${item.price})\n`;
                total += item.price;
            });
            orderContent += `\nç¸½é‡‘é¡ï¼šNT$${total}`;
            
            // --- é€™è£¡æ±ºå®šå¦‚ä½•ã€Œå¯„åˆ°ä½ é€™ç«¯ã€ ---
            
            // æ–¹æ³• A (æœ€ç°¡å–®)ï¼šä½¿ç”¨ mailto å–šèµ· Email è»Ÿé«”
            // é©åˆé‡å°‘ï¼Œæˆ–æ¸¬è©¦ç”¨
            /*
            const subject = `æ–°è¨‚å–®é€šçŸ¥ - ${name}`;
            const body = `å§“åï¼š${name}\né›»è©±ï¼š${phone}\nåœ°å€ï¼š${address}\n\n${orderContent}`;
            window.location.href = `mailto:your_email@example.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            */

            // æ–¹æ³• B (æ¨¡æ“¬)ï¼šé¡¯ç¤ºæˆåŠŸè¦–çª— (å¯¦éš›ä¸Šä½ éœ€è¦æ¥ Google è¡¨å–®æˆ–å¾Œç«¯ API)
            console.log("è¨‚å–®è³‡æ–™:", { name, phone, address, cart });
            alert(`æ„Ÿè¬è¨‚è³¼ï¼\n\næˆ‘å€‘æœƒç›¡å¿«å°‡å•†å“å¯„é€åˆ°ï¼š\n${address}\n\n(æ­¤ç‚ºéœæ…‹ç¤ºç¯„é é¢ï¼Œå¯¦éš›ä¸²æ¥éœ€ä½¿ç”¨è¡¨å–®æœå‹™)`);
            
            // æ¸…ç©ºè³¼ç‰©è»Š
            cart = [];
            renderCart();
            document.getElementById('order-form').reset();
        }

        // å•Ÿå‹•æ¸²æŸ“
        renderProducts();
